@page "/productos/{id:int}/editar"
@inject ProductoBusiness Service

<h3>EditProducto</h3>

@if(Producto.Id == null)
{
    <p>No existe el producto</p>
}
else
{
    <ProductosForm Producto="Producto" />
}

@code {

    [Parameter]
    public int Id { get; set; }

    private Producto? Producto;

    protected override void OnInitialized()
    {

        Producto = Service.GetOneProducto(Id);
    }
}